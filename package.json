{
  "name": "graphql-codegen-vscode",
  "displayName": "graphql-codegen",
  "description": "integrates graphql-codegen into vscode, running it every time your query/mutation is saved",
  "icon": "gql-codegen-cover.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "graphql-codegen.generateGqlCodegen",
        "title": "Generate GQL codegen"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./ --skipLibCheck",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "glob": "^7.1.6",
    "husky": "^6.0.0",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-loader": "^9.1.1",
    "typescript": "^4.2.4",
    "vscode-test": "^1.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@graphql-codegen/cli": "^1.21.4",
    "graphql": "^15.5.0",
    "lodash.clonedeep": "^4.5.0",
    "multimatch": "^5.0.0"
  }
}
